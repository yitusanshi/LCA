<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.batch.dao.BatchDao">
    <resultMap id="BaseResultMap" type="io.renren.modules.batch.entity.BatchEntity">
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="pr_id" property="prId" jdbcType="INTEGER"/>
        <result column="pr_unit" property="prUnit" jdbcType="VARCHAR"/>
        <result column="pr_usage" property="prUsage" jdbcType="DOUBLE"/>
        <result column="batch_no" property="batchNo" jdbcType="VARCHAR"/>
        <result column="batch_name" property="batchName" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
    user_id, pr_id,pr_usage,pr_unit,batch_no, batch_name, create_time
    </sql>

    <select id="getBatchByUserId" parameterType="java.lang.Long"
            resultType="io.renren.modules.batch.entity.BatchEntity">
        select
        user_id,pr_id,pr_usage,pr_unit,batch_no,batch_name,create_time
        from batch
        WHERE  user_id=#{userId,jdbcType=BIGINT}
    </select>


    <select id="getBatchByBatchVo" parameterType="io.renren.modules.batch.vo.BatchVo" resultMap="BaseResultMap">
        select
        user_id,pr_id,pr_usage,pr_unit,batch_no,batch_name,create_time
        from batch
        WHERE 1=1
        <if test="userId != null">
            and user_id = #{userId,jdbcType=BIGINT}
        </if>
        <if test="prId != 0">
            and pr_id = #{prId,jdbcType=INTEGER}
        </if>
        <if test="batchNo != null">
            and batch_no = #{batchNo,jdbcType=VARCHAR}
        </if>
        <if test="batchName != null">
            and batch_name = #{batchName,jdbcType=VARCHAR}
        </if>
    </select>
    <select id="getBatchByPrId" resultType="io.renren.modules.batch.entity.BatchEntity">
        select
        user_id,pr_id,pr_usage,pr_unit,batch_no,batch_name,create_time
        from batch
        WHERE  user_id=#{userId} and  pr_id = #{prId}
    </select>
    <select id="getusageByVersion"  resultType="java.lang.Double">
        SELECT pr_usage FROM batch WHERE batch_no = #{version} and pr_id = #{prId}
    </select>
</mapper>